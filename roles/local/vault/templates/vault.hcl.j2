ui = true

storage "raft" {
  path    = "/opt/vault/data"
  node_id = "{{ ansible_hostname }}"
}

listener "tcp" {
  address         = "127.0.0.1:8200"
  cluster_address = "127.0.0.1:8201"
  tls_disable     = true
}

disable_mlock = true

cluster_name = "vault-cluster"
api_addr     = "http://127.0.0.1:8200"
cluster_addr = "http://127.0.0.1:8201"

